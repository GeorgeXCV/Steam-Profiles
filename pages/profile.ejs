<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= profile.nickname %>'s Steam Profile | Steam Achievements Tracker</title>
    <meta charset="UTF-8">
    <meta name="Description" content = "<%= profile.nickname %>'s Steam Profile.">    
    <meta name="viewport" content="width=device-width">
    <link rel="apple-touch-icon" sizes="180x180" href="/public/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/images/favicon/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="/css/profile.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300&display=swap" rel="stylesheet">
    <script src="/jquery/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function(){
          $(".search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $(".gamesTable tr").filter(function() {
              $(this).toggle($(".game", this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
    </script> 
</head>

<body>
    <div class="header">
        <span><a href="/">Steam Profiles</a></span>
    </div>
    <div class="user-header">
        <div class="avatar">
            <img src="<%= profile.avatar %>" alt="" height="70" width="70"> 
        </div>
        <div class="username">
            <h1><span><%= profile.nickname %>'s Steam Profile</span></h1>
        </div>
        <div class="stats">
            <span class="stat"> <%= profile.Games.length %>
                <span>Games</span>
            </span>
            <span class="stat"> <%= profile.completedGames %> 
                <span>100% Games</span>
            </span>
            <span class="stat"> <%= profile.completion %>
                <span>Completion</span>
            </span>
            <span class="stat"> <%= profile.totalAchievements %>
                <span>Total Achievements</span>
            </span>
            <span class="stat"> <%= profile.unearnedAchievements %>
                <span>Unearned Achievements</span>
            </span>
        </div>
    </div>
    <div class="user-games">
        <input type="text" class="search" placeholder="Search games">
        <table class="gamesTable">
            <tbody>
                <% for(var i=0; i<profile.Games.length; i++) {%>
                <tr>
                    <td class="gameLogoCell">
                        <a href="/<%=profile.steamUsername%>/achievements/<%=profile.Games[i].gameName.replace(/\s+/g, '-').replace(/\:/g, '').toLowerCase();%>/<%=profile.Games[i].appID%>">
                        <img src="<%= profile.Games[i].logo %>" alt="<%= profile.Games[i].gameName %>" height="72" width="184" loading="lazy"> 
                         </a>
                    </td>
                    <td>
                        <a class="game" href="/<%=profile.steamUsername%>/achievements/<%=profile.Games[i].gameName.replace(/\s+/g, '-').replace(/\:/g, '').toLowerCase();%>/<%=profile.Games[i].appID%>">
                        <%= profile.Games[i].gameName %>
                        </a>
                        <div class="progress">
                            <%= profile.Games[i].progress %>
                        </div>
                        <div class="playtime">
                            <%= profile.Games[i].playTime %>
                        </div> 
                    </td>
                    <td class="progressBarCell">
                        <div class="progress-bar">
                            <span><%= profile.Games[i].progressPercentage %></span>
                            <div class="bar" style="width: <%= profile.Games[i].progressPercentage %>"></div>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        </div>
        </div>
    </div>
</body>

<footer>
    <div class="footer">
                <div class="disclaimer">
                    <p>Steam Profiles is not affiliated with Valve in any way
                        <br>
                    © 2020 George Ashton</p>
               
                </div>
                <div class="links">
                    <a class="contact-us" href="mailto:contact@123.com">Contact Us</a>
                    <bullet>•</bullet>
                    <a class="terms" href="terms.html">Terms & Conditions</a>
                    <bullet>•</bullet>
                    <a class="privacy" href="privacy.html">Privacy Policy</a>
                </div>
        </div>
</footer>
</html>